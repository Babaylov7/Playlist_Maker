<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Стили для Стартового экрана -->

    <style name="Title">
        <item name="android:textSize">@dimen/primary_text_size_22</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StartActivityBackground">
        <item name="android:background">@color/yp_black</item>
    </style>

    <style name="bottom_panel">
        <item name="itemTextColor">@color/bottom_nav_color_dark</item>
        <item name="itemIconTint">@color/bottom_nav_color_dark</item>
        <item name="android:background">@color/yp_black</item>
    </style>

    <!-- Стили для экрана Настроек -->

    <style name="SettingsActivityBackground">
        <item name="android:background">@color/yp_black</item>
    </style>

    <style name="SettingsActivityTextColor">
        <item name="android:textColor">@color/white</item>
        <item name="drawableTint">@color/white</item>
    </style>

    <style name="SettingsActivityTitle">
        <item name="android:textColor">@color/white</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="ButtonSwitch">
        <item name="thumbTint">@color/yp_blue</item>
        <item name="trackTint">@color/yp_blue_light</item>
    </style>

    <!-- Стили для экрана Поиска -->

    <style name="EditTextStyle">
        <item name="android:drawableTint">@color/yp_black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColorHint">@color/yp_black</item>
    </style>

    <style name="ButtonForEditTextStyle">
        <item name="tint">@color/yp_black</item>
    </style>

    <style name="track_item_style_1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="track_item_style_2">
        <item name="android:drawableTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="title_you_were_looking_for">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MessageError">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonUpdate">
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <!-- Стили для экрана Проигрователя -->

    <style name="button_play">
        <item name="tint">@color/white</item>
    </style>

    <style name="text_style_for_player_activity">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="player_button">
        <item name="android:backgroundTint">@color/gray_button_night_mode</item>
    </style>

    <!-- Стили для экрана Медиатеки -->

    <style name="toolbar_style">
        <item name="android:textSize">@dimen/primary_text_size_26</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tab_item_style_1">
        <item name="tabTextColor">@color/white</item>
        <item name="tabIndicatorColor">@color/white</item>
    </style>

    <!-- Стили для экрана создания нового альбома -->
    <style name="new_playlist_edit_text_style" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    </style>

