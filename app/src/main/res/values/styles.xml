<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Стили TOAST -->
    <style name="myToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">@color/white</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/yp_black</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stLength">LONG</item>
        LONG or SHORT
        <item name="stRadius">5dp</item>
    </style>

    <!-- Стиль для всплывающих окон -->
    <style name="dialog_theme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/primary_text_size_19</item>
        <item name="android:height">@dimen/height64</item>
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="materialAlertDialogBodyTextStyle">@style/custom_body_text_style</item>
        <item name="buttonBarPositiveButtonStyle">@style/positive_button_style</item>
        <item name="buttonBarNegativeButtonStyle">@style/negative_button_style</item>
    </style>

    <style name="custom_body_text_style" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/yp_black</item>
        <item name="android:textSize">@dimen/primary_text_size_19</item>
    </style>

    <style name="positive_button_style">
        <item name="android:textColor">@color/yp_blue</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="negative_button_style">
        <item name="android:textColor">@color/yp_blue</item>
        <item name="backgroundTint">@color/white</item>
    </style>


    <!-- Стили для Стартового экрана -->

    <style name="Title">
        <item name="android:textSize">@dimen/primary_text_size_22</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/primary_text_size_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/medium_padding</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="StartActivityBackground">
        <item name="android:background">@color/yp_blue</item>
    </style>

    <style name="bottom_panel">
        <item name="itemTextColor">@color/bottom_nav_color_light</item>
        <item name="itemIconTint">@color/bottom_nav_color_light</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- Стили для экрана Настроек -->

    <style name="SettingsActivityBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="SettingsActivityTextColor">
        <item name="android:textColor">@color/yp_black</item>
        <item name="drawableTint">@color/yp_text_gray</item>
    </style>

    <style name="SettingsActivityTitle">
        <item name="android:textColor">@color/yp_black</item>
        <item name="tint">@color/yp_black</item>
    </style>

    <style name="ButtonSwitch">
        <item name="thumbTint">@color/yp_text_gray</item>
        <item name="trackTint">@color/yp_light_gray</item>
    </style>

    <!-- Стили для экрана Поиска -->

    <style name="EditTextStyle">
        <item name="android:drawableTint">@color/yp_text_gray</item>
        <item name="android:backgroundTint">@color/yp_light_gray</item>
        <item name="android:textColorHint">@color/yp_text_gray</item>
    </style>

    <style name="ButtonForEditTextStyle">
        <item name="tint">@color/yp_text_gray</item>
    </style>

    <style name="track_item_style_1">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="track_item_style_2">
        <item name="android:drawableTint">@color/yp_text_gray</item>
        <item name="android:textColor">@color/yp_text_gray</item>
        <item name="tint">@color/yp_text_gray</item>
    </style>

    <style name="title_you_were_looking_for">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MessageError">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="ButtonUpdate">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/yp_black</item>
    </style>

    <!-- Стили для экрана Проигрователя -->

    <style name="button_play">
        <item name="tint">@color/black</item>
    </style>

    <style name="text_style_for_player_activity">
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="player_button">
        <item name="android:backgroundTint">@color/gray_button_light_mode</item>
    </style>


    <!-- Стили для экрана Медиатеки -->

    <style name="toolbar_style">
        <item name="android:textSize">@dimen/primary_text_size_26</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tab_item_style_1">
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
    </style>

    <style name="text_appearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/primary_text_size_16</item>
    </style>


    <!-- Стили для экрана создания нового альбома -->
    <style name="play_list_create_text_input_layout" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">16sp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <style name="play_list_create_album_image">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <!-- Стиль для BottomSheet на экране аудиоплеера  -->

    <style name="bottom_sheet_audio_player" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
    </style>

    <style name="bottom_sheet_title_style">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="bottom_sheet_title_style2">
        <item name="android:textColor">@color/yp_text_gray</item>
    </style>

    <style name="bottom_sheet_style">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="bottom_sheet_view_style">
        <item name="android:backgroundTint">@color/yp_text_gray</item>
    </style>


</resources>