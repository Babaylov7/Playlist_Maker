<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Стили для Стартового экрана -->

    <style name="Title">
        <item name="android:textSize">@dimen/primary_text_size_22</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/primary_text_size_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/medium_padding</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="StartActivityBackground">
        <item name="android:background">@color/yp_blue</item>
    </style>

    <!-- Стили для экрана Настроек -->

    <style name="SettingsActivityBackground">
        <item name="android:background">@color/white</item>
    </style>

    <style name="SettingsActivityTextColor">
        <item name="android:textColor">@color/yp_black</item>
        <item name="drawableTint">@color/yp_text_gray</item>
    </style>

    <style name="SettingsActivityTitle">
        <item name="android:textColor">@color/yp_black</item>
        <item name="tint">@color/yp_black</item>
    </style>

    <style name="ButtonSwitch">
        <item name="thumbTint">@color/yp_text_gray</item>
        <item name="trackTint">@color/yp_light_gray</item>
    </style>

    <!-- Стили для экрана Поиска -->

    <style name="EditTextStyle">
        <item name="android:drawableTint">@color/yp_text_gray</item>
        <item name="android:backgroundTint">@color/yp_light_gray</item>
        <item name="android:textColorHint">@color/yp_text_gray</item>
    </style>

    <style name="ButtonForEditTextStyle">
        <item name="tint">@color/yp_text_gray</item>
    </style>

    <style name="track_item_style_1">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="track_item_style_2">
        <item name="android:drawableTint">@color/yp_text_gray</item>
        <item name="android:textColor">@color/yp_text_gray</item>
        <item name="tint">@color/yp_text_gray</item>
    </style>
    
    <style name="MessageError">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/yp_black</item>
    </style>

    <style name="ButtonUpdate">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/yp_black</item>
    </style>

</resources>