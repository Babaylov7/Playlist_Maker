<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SettingsActivityBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_on_the_edges"
    tools:context=".presentation.ui.settings.activity.SettingsActivity">

    <LinearLayout
        android:id="@+id/panel_heade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/height_panel_header"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/button_back"
            style="@style/SettingsActivityTitle"
            android:layout_width="@dimen/button_back_size"
            android:layout_height="@dimen/button_back_size"
            android:layout_gravity="center"
            android:clickable="true"
            android:contentDescription="@string/title_back"
            android:focusable="true"
            android:src="@drawable/button_back" />

        <TextView
            android:id="@+id/title_settings"
            style="@style/SettingsActivityTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="center_vertical"
            android:text="@string/title_settings"
            android:textAppearance="@style/Title"
            android:textSize="@dimen/primary_text_size_22" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_top_24"
        android:minHeight="@dimen/settings_element_height"
        android:orientation="horizontal">

        <TextView
            style="@style/SettingsActivityTextColor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/ys_display_regular"
            android:text="@string/dark_theme"
            android:textSize="@dimen/primary_text_size_16" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/dark_theme_switch"
            style="@style/ButtonSwitch"
            android:layout_width="@dimen/button_switch_compat_width"
            android:layout_height="@dimen/button_switch_compat_height"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sare_application"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:minHeight="@dimen/settings_element_height"
        android:orientation="horizontal">

        <TextView
            style="@style/SettingsActivityTextColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/ys_display_regular"
            android:text="@string/share_app"
            android:textSize="@dimen/primary_text_size_16"
            app:drawableEndCompat="@drawable/share_light_mode" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/write_to_support"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:minHeight="@dimen/settings_element_height"
        android:orientation="horizontal">

        <TextView
            style="@style/SettingsActivityTextColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/ys_display_regular"
            android:text="@string/write_to_support"
            android:textSize="@dimen/primary_text_size_16"
            app:drawableEndCompat="@drawable/support_light_mode" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/terms_of_use"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:minHeight="@dimen/settings_element_height"
        android:orientation="horizontal">

        <TextView
            style="@style/SettingsActivityTextColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/ys_display_regular"
            android:text="@string/user_application"
            android:textSize="@dimen/primary_text_size_16"
            app:drawableEndCompat="@drawable/arrow_forward_light_mode" />

    </LinearLayout>

</LinearLayout>