<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity"
    android:orientation="vertical"
    android:padding="@dimen/margin_on_the_edges"
    style="@style/SettingsActivityBackground">

    <LinearLayout
        android:id="@+id/panel_heade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/height_panel_header"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/button_back"
            android:layout_width="@dimen/button_back_size"
            android:layout_height="@dimen/button_back_size"
            android:layout_gravity="center"
            android:contentDescription="@string/title_back"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/button_back"
            style="@style/SettingsActivityTitle"/>


        <TextView
            android:id="@+id/title_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="@string/title_search"
            android:textAppearance="@style/Title"
            android:textSize="@dimen/primary_text_size"
            android:fontFamily="@font/ys_display_medium"
            style="@style/SettingsActivityTitle"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/linear_layout_for_edit_text_height"
        android:orientation="horizontal"
        android:gravity="center">

        <!--
        <EditText
            android:id="@+id/inputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/edit_text_height"
            android:hint="@string/title_search"
            android:textColorHint="@color/yp_text_gray"
            android:maxLines="1"
            android:inputType="text"
            android:textColor="@color/yp_black"
            android:fontFamily="@font/ys_display_medium"
            android:background="@color/yp_light_gray"
            android:drawableStart="@drawable/search_light_mode"
            android:drawableEnd="@drawable/close"
            android:drawableTint="@color/yp_text_gray"
            android:drawablePadding="8dp"
            android:paddingStart="14dp"
            android:paddingEnd="14dp"
            app:endIconMode="clear_text"/>
            -->

        <EditText
            android:id="@+id/editText"
            android:cursorVisible="true"
            android:textColor="@color/yp_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/edit_text_height"
            android:textCursorDrawable="@color/yp_black"
            android:drawableStart="@drawable/search_light_mode"
            android:drawableTint="@color/yp_text_gray"
            android:background="@drawable/edit_text_dackground"
            android:backgroundTint="@color/yp_light_gray"
            android:hint="@string/title_search"
            android:textColorHint="@color/yp_text_gray"
            android:maxLines="1"
            android:drawablePadding="4dp"
            android:paddingStart="14dp"
            android:fontFamily="@font/yandex_sans_display_regular"
            />


    </LinearLayout>



</LinearLayout>