<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/StartActivityBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_on_the_edges"
    tools:context=".presentation.ui.main.MainActivity">

    <RelativeLayout
        android:id="@+id/panel_heade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/height_panel_header">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_medium"
            android:gravity="top"
            android:text="@string/title"
            android:textAppearance="@style/Title" />

    </RelativeLayout>

    <Button
        android:id="@+id/button_search"
        style="@style/ButtonStyle"
        android:text="@string/button_search_text"
        app:cornerRadius="@dimen/primary_corner_radius_for_button"
        app:icon="@drawable/search_light_mode" />

    <Button
        android:id="@+id/button_library"
        style="@style/ButtonStyle"
        android:text="@string/button_library_text"
        app:cornerRadius="@dimen/primary_corner_radius_for_button"
        app:icon="@drawable/library_light_mode" />

    <Button
        android:id="@+id/button_settings"
        style="@style/ButtonStyle"
        android:text="@string/button_settings_text"
        app:cornerRadius="@dimen/primary_corner_radius_for_button"
        app:icon="@drawable/settings_light_mode" />

</LinearLayout>