<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/blue_background"
    android:padding="16dp">

    <RelativeLayout
        android:id="@+id/panel_heade"
        android:layout_width="360dp"
        android:layout_height="56dp">

        <TextView
            android:layout_width="154dp"
            android:layout_height="30dp"
            android:text="@string/title"
            android:textAppearance="@style/title"
            android:gravity="top"/>

    </RelativeLayout>

    <Button
        android:id="@+id/button_search"
        style="@style/button_style"
        android:layout_width="match_parent"
        android:fontFamily="sans-serif-medium"
        android:text="@string/button_search_text"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="normal"
        app:cornerRadius="16dp"
        app:icon="@drawable/search_light_mode"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/primary_text_size"
        app:iconTint="@color/black">
    </Button>

    <Button
        android:id="@+id/button_library"
        android:layout_width="match_parent"
        android:text="@string/button_library_text"
        android:textSize="22sp"
        android:textStyle="normal"
        android:textColor="@color/black"
        style="@style/button_style"
        app:cornerRadius="16dp"
        app:icon="@drawable/library_light_mode"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/primary_text_size"
        app:iconTint="@color/black">
    </Button>

    <Button
        android:id="@+id/button_settings"
        android:layout_width="match_parent"
        android:text="@string/button_settings_text"
        android:textSize="22sp"
        android:textStyle="normal"
        android:textColor="@color/black"
        style="@style/button_style"
        app:cornerRadius="16dp"
        app:icon="@drawable/settings_light_mode"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/primary_text_size"
        app:iconTint="@color/black">
    </Button>



</LinearLayout>