<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation_graph"
    app:startDestination="@id/libraryFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.playlistmaker.presentation.ui.search.fragment.SearchFragment"
        android:label="search_fragment"
        tools:layout="@layout/search_fragment" >
        <action
            android:id="@+id/action_searchFragment_to_playerActivity"
            app:destination="@id/playerActivity" />
    </fragment>
    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.example.playlistmaker.presentation.ui.library.fragments.LibraryFragment"
        android:label="library_fragment"
        tools:layout="@layout/library_fragment" >
        <action
            android:id="@+id/action_libraryFragment_to_newPlaylistActivity"
            app:destination="@id/newPlaylistActivity" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.playlistmaker.presentation.ui.settings.fragment.SettingsFragment"
        android:label="settings_fragment"
        tools:layout="@layout/settings_fragment" />
    <activity
        android:id="@+id/playerActivity"
        android:name="com.example.playlistmaker.presentation.ui.player.activity.PlayerActivity"
        android:label="player_activity"
        tools:layout="@layout/player_activity" />
    <activity
        android:id="@+id/newPlaylistActivity"
        android:name="com.example.playlistmaker.presentation.ui.new_playlist.NewPlaylistFragment"
        android:label="create_new_playlist"
        tools:layout="@layout/create_new_playlist_fragment" />
</navigation>